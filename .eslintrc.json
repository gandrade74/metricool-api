{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", { "code": 120 }],
    "no-param-reassign": "off",
    "no-underscore-dangle": "off"
  }
}
